<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>REJA</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />
</head>

<body style="background-color: #b8bbd1">
  <!-- SHU YERDAN YOZASIZ -->

  <div class="container">
    <h1 class="display-4 text-center py-1">Reja va Maqsadlar</h1>
    <div class="jumbotron">
      <form id="create-form" action="/create-item" method="post">
        <div class="input-group">
          <input id="create-field" type="text" class="form-control"  placeholder="Yangi Xarid...">
          <div class="input-group-append">
            <button style="border-radius: 20px; margin-left: 10px;" type="submit" class="btn btn-primary">Yangi Reja
              Qo'shish</button>
          </div>
        </div>
      </form>


    </div>


    <ul id="item-list" class="list-group pb-5">

      <% items.map(function(item){ %>
        <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
          <span class="item-tex"><%= item.reja %></span>
          <div>
            <button data-id = "<%= item._id %>" class="edit-me btn btn-secondary btn-sm mr-1">Ozgartirish</button>
            <button data-id = "<%= item._id %>" class="delete-me btn btn-danger btn-sm">Ochirish</button>
          </div>
        </li>

      <% }) %>
     
    </ul>
    <button id="clean-all" class="btn btn-danger" style="border-radius: 20px; width: 20%;">
          Hamma rejalarni o'chirish
        </button> 
  </div>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/browser.js"></script>
</body>
</html>